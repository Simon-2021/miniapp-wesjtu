.access-input {
    box-sizing: border-box;
    border: 1px solid #d9d9d9;
    border-radius: 3px;
    padding: 0 5px;
    height: 34px;

    font-size: 14px;

    transition: all .2s ease;
}
.access-input-focus {
    border-color: #0a4ca1;

    box-shadow: 0 0 0 1px rgba(10, 76, 161, .2),
    inset 0 0 0 1px rgba(10, 76, 161, .2);
}
.access-input-warn {
    border-color: #e64340;

    box-shadow: 0 0 0 1px rgba(230, 67, 64, .2),
    inset 0 0 0 1px rgba(230, 67, 64, .2);
}
