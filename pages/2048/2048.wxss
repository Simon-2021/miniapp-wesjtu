.action_cavas {
    display: flex;

    width: 100%;
    height: 100%;

    flex-direction: column;
    justify-content: center;
}
.score {
    display: flex;
}
.score-title {
    margin: 40rpx 20rpx 40rpx 40rpx;
    border-radius: 8rpx;
    height: 150rpx;

    font-size: 2.4rem;
    line-height: 140rpx;
    text-align: center;

    color: #7c736a;
    background-color: #eee4da;

    flex: 1;
}
.score-detail {
    margin: 40rpx 20rpx;
    border-radius: 10rpx;
    height: 150rpx;

    font-size: 1.2rem;
    text-align: center;

    color: #353535;
    background-color: #eee4da;

    flex: 1;
}
.score-detail:last-child {
    margin-right: 40rpx;
}
.score-desc {
    line-height: 80rpx;
}
.score-number {
    font-weight: 600;
    line-height: 45rpx;
}
