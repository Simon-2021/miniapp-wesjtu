.detail-main {
    box-sizing: border-box;
    min-height: 100%;

    font-size: 12px;

    color: #000;
    background-color: #fff;
}
.detail-head {
    display: flex;

    position: relative;

    border-bottom: 1px solid #d9d9d9;
    width: 100%;
    height: 80px;
}
.head-left {
    min-width: 63px;
    height: 100%;
}
.head-left-wrapper {
    display: flex;

    width: 63px;
    height: 100%;

    align-items: center;
    justify-content: flex-end;
}
.act-poster {
    border-radius: 3px;
    width: 48px;
    height: 60px;
}
.head-right {
    box-sizing: border-box;
    padding: 10px;
    padding-right: 15px;
    width: 100%;
    height: 100%;
}
.head-right-wrapper {
    display: flex;

    width: 100%;
    height: 100%;

    flex-direction: column;
}
.act-name {
    overflow: hidden;

    max-height: 36px;

    font-size: 14px;
    font-weight: 700;
    line-height: 1.4;
}
.act-status-user {
    right: 15px;
    bottom: 10px;
}
.act-location-text-wrapper,
.act-source-text-wrapper {
    display: inline-block;
    overflow: hidden;

    max-width: 17.5rem;

    white-space: nowrap;
    text-overflow: ellipsis;
}
.detail-desc {
    margin: 0 10px;
    border-bottom: 1px solid #d9d9d9;
    padding: 10px 5px;
    width: calc(100% - 20px);
    height: 80px;
}
.detail-desc-wrapper {
    display: flex;

    width: 100%;
    height: 100%;

    flex-direction: column;
    justify-content: space-between;
}
.act-time-icon,
.act-source-icon {
    width: 15px;
    height: 15px;
}
.act-location-icon {
    width: 16px;
    height: 16px;
}
.act-contents {
    padding-bottom: 10px;
}
.act-paragraph {
    margin: 10px 15px;
    width: calc(100% - 30px);

    text-align: justify;
    word-wrap: break-word;
    word-break: break-all;
}
.image-center {
    display: flex;

    justify-content: center;
}
.act-text {
    font-size: 14px;
    line-height: 1.6;
}
.act-end {
    display: flex;

    margin: 10px 15px;
    width: calc(100% - 30px);
}
.act-end-line {
    position: relative;

    width: calc(50% - 15px);
}
.act-end-line-wrap {
    position: absolute;
    top: 50%;

    border-bottom: 1px solid #ececec;
    width: 100%;
}
.act-end-text {
    width: 30px;

    text-align: center;

    color: #b2b2b2;
}
